<div class="content-wrapper">
  <div class="row">
    <div>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Products</h4>
          <p class="card-description">
            List Product <code>of HaoHoa</code>
          </p>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>

                <tr>
                  <th>No</th>
                  <th>Image</th>
                  <th>Name</th>
                  <th>brand</th>
                  <th>price</th>
                </tr>

              </thead>
              <tbody>
                {{#each products}}
                <a class="a-haohoa" href="/product/details/{{this._id}}">
                <tr onclick="handleClick({{@index}})">
                  <td>{{foo @index}}</td>
                  <td><img src={{this.image}} /></td>
                  <td>{{this.name_product}}</td>
                  <td>{{this.price}}</td>
                  <td>2</td>
                </tr>
                </a>

                {{/each}}



              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    function handleClick(index) {
      document.getElementsByClassName("a-haohoa")[index].click();
    }
  </script>
</div>